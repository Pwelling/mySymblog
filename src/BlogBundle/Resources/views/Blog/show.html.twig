{% extends 'BlogBundle::layout.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
    <article class="blog">
        <header>
            <div class="date"><time datetime="{{ blog.created|date('c') }}">{{ blog.created|date('d-m-Y H:i') }}</time></div>
            <h2>{{ blog.title }}</h2>
        </header>
        <div>
            <p>{{ blog.blog | raw }}</p>
        </div>
    </article>
    <section class="comments" id="comments">
        <section class="previous-comments">
            <h3>Opmerkingen</h3>
            {% include 'BlogBundle:Comment:index.html.twig' with { 'comments': comments } %}
        </section>
        <h3>Opmerking plaatsen</h3>
        {% include 'BlogBundle:Comment:form.html.twig' with { 'form': form, 'blog' : blog } %}
    </section>
{% endblock %}
